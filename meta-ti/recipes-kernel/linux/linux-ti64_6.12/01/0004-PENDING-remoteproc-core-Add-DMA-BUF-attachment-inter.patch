+	list_for_each_entry_safe(attach, atmp, &rproc_cdev->attachments, node) {
+		rproc_detach_dmabuf(rproc, attach->dmabuf);
+		dma_buf_put(attach->dmabuf);
+		kfree(attach);
+	}
+	mutex_destroy(&rproc_cdev->mutex);
+	kfree(rproc_cdev);
 
 	return ret;
 }
